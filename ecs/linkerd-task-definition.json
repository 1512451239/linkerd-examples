{
  "containerDefinitions": [
    {
      "name": "linkerd",
      "image": "docker.io/buoyantio/linkerd:1.3.2",
      "command": [
        "-log.level=DEBUG",
        "/etc/linkerd/linkerd.yaml"
      ],
      "memory": 1024,
      "portMappings": [
        {
          "hostPort": 4140,
          "containerPort": 4140,
          "protocol": "tcp"
        },
        {
          "hostPort": 4141,
          "containerPort": 4141,
          "protocol": "tcp"
        },
        {
          "hostPort": 4142,
          "containerPort": 4142,
          "protocol": "tcp"
        },
        {
          "hostPort": 4143,
          "containerPort": 4143,
          "protocol": "tcp"
        },
        {
          "hostPort": 9990,
          "containerPort": 9990,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "mountPoints": [
        {
          "containerPath": "/etc/linkerd",
          "sourceVolume": "linkerd-config",
          "readOnly": true
        },
        {
          "containerPath": "/io.buoyant/linkerd/certs/",
          "sourceVolume": "linkerd-certs",
          "readOnly": true
        }
      ],
      "environment": [
        {
          "name": "SERVICE_9990_NAME",
          "value": "linkerd"
        },
        {
          "name": "JVM_HEAP_MIN",
          "value": "768M"
        },
        {
          "name": "JVM_HEAP_MAX",
          "value": "768M"
        },

      ]
    }
  ],
  "volumes": [
    {
      "host": {
        "sourcePath": "/etc/linkerd"
      },
      "name": "linkerd-config"
    },
    {
      "host": {
        "sourcePath": "/io.buoyant/linkerd/certs/"
      },
      "name": "linkerd-certs"
    }
  ],
  "family": "linkerd"
}
